// Absolute center position for children
//
// e.g.: please-align-it-center() for middle position of an element
//
// ----------------------------------------------
please-align-it-center() {
  align-items: center;
  display: flex;
  height: 100vh;
  justify-content: center;
}

// Absolute middle position
//
// e.g.: absolute-middle-position() for middle position of an element
//
// ----------------------------------------------
absolute-middle-position() {
  left: 50%;
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
}
