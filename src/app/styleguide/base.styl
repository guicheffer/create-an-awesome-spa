@import 'reset';

@import 'palette';
@import 'typography';

@import 'layout';

@import '../footer/footer';

font-face-normal()
font-face-bold()

::selection {
  background: $color-primary;
  color: $white-base;
}

body {
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  background: $color-primary;
  background-position: 50% 50%;
  background-size: 100%;
  color: $white-base;
  line-height: $font-size-base + $spacing-xsmall;
}

body, input, a {
  font-family: 'Mukta', Helvetica, sans-serif;
  font-size: $font-size-base;
  font-style: normal;
  font-weight: $font-weight-normal;
  text-decoration: none;
}

.create-an-awesome-spa {
  create-an-awesome-spa-layout();
  create-an-awesome-spa-layout-responsive();

  &__footer {
    footer();
    footer-responsive();
  }
}
