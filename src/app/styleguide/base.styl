@import 'reset';

@import 'palette';
@import 'typography';
@import 'utils';

@import 'layout';

@import '../footer/footer';

font-face-normal()
font-face-bold()

::selection {
  background: $color-primary;
  color: $white-base;
}

body {
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  background: $color-primary;
  background-position: 50% 50%;
  background-size: 100%;
  color: $white-base;
  line-height: $font-size-base + $spacing-xsmall;
}

body, input, a {
  font-family: 'Mukta', Helvetica, sans-serif;
  font-size: $font-size-base;
  font-style: normal;
  font-weight: $font-weight-normal;
  text-decoration: none;
}

.create-an-awesome-spa {
  create-an-awesome-spa-layout();
  create-an-awesome-spa-layout-responsive();

  &__wrapper {
    please-align-it-center()
  }

  &__panel {
    $width = 420px;

    border: 1px solid #fff;
    padding: $spacing-large;
    width: $width;

    .panel {
      &__list {
        .list {
          &__content {
            margin: $spacing-large 0 0;
            width: 100%;

            th, td { border: 1px solid #fff; }
          }
        }
      }
    }
  }

  &__footer {
    footer();
    footer-responsive();
  }
}
